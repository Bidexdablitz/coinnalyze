{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDirs": ["src"],
    "outDir": "api",
    "lib": ["es2020"],
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/**/*"],
  "exclude": ["node_modules", ".vscode"]
}
